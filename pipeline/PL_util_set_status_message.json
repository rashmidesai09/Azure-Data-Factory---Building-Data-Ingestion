{
	"name": "PL_util_set_status_message",
	"properties": {
		"description": "Sets the status message from a calling pipeline and constructs a subject and a message",
		"activities": [
			{
				"name": "Switch Status",
				"description": "Construct a message and subject depending on the supply status of either success or failed",
				"type": "Switch",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"on": {
						"value": "@pipeline().parameters.status",
						"type": "Expression"
					},
					"cases": [
						{
							"value": "Success",
							"activities": [
								{
									"name": "PL_util_send_email_notifications",
									"type": "ExecutePipeline",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"pipeline": {
											"referenceName": "PL_util_send_email_notifications",
											"type": "PipelineReference"
										},
										"waitOnCompletion": true,
										"parameters": {
											"systemCode": {
												"value": "@pipeline().parameters.systemCode",
												"type": "Expression"
											},
											"datasetName": {
												"value": "@pipeline().parameters.datasetName",
												"type": "Expression"
											},
											"subject": {
												"value": "@concat('ADF Pipeline: ',pipeline().parameters.triggerpipeline)",
												"type": "Expression"
											},
											"message": {
												"value": "@concat(pipeline().parameters.triggerpipeline,'has completed successfully')",
												"type": "Expression"
											}
										}
									}
								}
							]
						},
						{
							"value": "Failed",
							"activities": [
								{
									"name": "PL_util_send_email_notifications_failed",
									"type": "ExecutePipeline",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"pipeline": {
											"referenceName": "PL_util_send_email_notifications",
											"type": "PipelineReference"
										},
										"waitOnCompletion": true,
										"parameters": {
											"systemCode": {
												"value": "@pipeline().parameters.systemCode",
												"type": "Expression"
											},
											"datasetName": {
												"value": "@pipeline().parameters.datasetName",
												"type": "Expression"
											},
											"subject": {
												"value": "@concat('ADF Pipeline: ',pipeline().parameters.triggerpipeline)",
												"type": "Expression"
											},
											"message": {
												"value": "@concat(pipeline().parameters.triggerpipeline,'has failed, please check')",
												"type": "Expression"
											}
										}
									}
								}
							]
						}
					],
					"defaultActivities": [
						{
							"name": "PL_util_send_email_notifications_default",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "PL_util_send_email_notifications",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"systemCode": {
										"value": "@pipeline().parameters.systemCode",
										"type": "Expression"
									},
									"datasetName": {
										"value": "@pipeline().parameters.datasetName",
										"type": "Expression"
									},
									"subject": {
										"value": "@concat('ADF Pipeline: ',pipeline().parameters.triggerpipeline)",
										"type": "Expression"
									},
									"message": {
										"value": "@concat(pipeline().parameters.triggerpipeline,'has no valid status, please check',\r\npipeline().parameters.status,'expecting a success message')",
										"type": "Expression"
									}
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"status": {
				"type": "string"
			},
			"triggerpipeline": {
				"type": "string"
			},
			"systemCode": {
				"type": "string"
			},
			"datasetName": {
				"type": "string"
			}
		},
		"folder": {
			"name": "utility"
		},
		"annotations": [],
		"lastPublishTime": "2023-01-20T11:30:38Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}